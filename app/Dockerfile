# Dockerfile
FROM node:20-alpine AS build

# Set working directory
WORKDIR /app

# Build the React app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Serve the build with a static server
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"] 